<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/widget_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дім"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/widget_queue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Черга:"
        android:textSize="11sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/widget_queue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.2"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/widget_status_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_status_on" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/widget_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Світло є"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/widget_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Відключення о 14:30"
                android:textSize="11sp"
                android:textColor="#666666" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оновлено о 09:42"
        android:textSize="9sp"
        android:textColor="#999999"
        android:layout_marginTop="4dp" />

</LinearLayout>